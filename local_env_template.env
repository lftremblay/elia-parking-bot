# Local Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Elia Configuration
ELIA_ORG=quebecor
ELIA_EMAIL=your_email@domain.com
ELIA_PASSWORD=your_password

# MFA Configuration
# Option 1: TOTP Secret (most reliable for cloud)
TOTP_SECRET=your_totp_secret_here

# Option 2: Email MFA (backup method)
EMAIL_ADDRESS=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=993

# Microsoft Account
MICROSOFT_USERNAME=your_microsoft_email@domain.com

# Environment Settings
ENVIRONMENT=local
DEBUG_MODE=true
SAVE_SCREENSHOTS=true
LOG_LEVEL=DEBUG

# Notification Settings (optional)
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Advanced Settings
MFA_TIMEOUT=60
TOTP_FIRST=true
EPHEMERAL_SESSIONS=false
SESSION_TIMEOUT=7200
